{
    "name": "recoded/laravel-mongodb",
    "description": "MongoDB connection for Laravel",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "NoÃ«l Hagestein",
            "email": "noel@recoded.dev"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-json": "*",
        "ext-mongodb": "*",
        "laravel/framework": "^8.0",
        "mongodb/mongodb": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "orchestra/testbench": "^6.2",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "Recoded\\MongoDB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Recoded\\MongoDB\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix --dry-run --verbose"
        ],
        "test": [
            "phpunit --colors=always --verbose"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Recoded\\MongoDB\\MongodbServiceProvider"
            ]
        }
    }
}
